---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>

<p class="post-date"><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></p>

{% if v1note %}
{{ v1note | renderContent("md") | safe }}
{% endif %}

{{ content | safe }}

{%- if collections.post %}
{%- set previousPost = collections.post | getPreviousCollectionItem %}
{%- set nextPost = collections.post | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}<li class="links-nextprev-prev">← Previous<br> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li class="links-nextprev-next">Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
